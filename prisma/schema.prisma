generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Prize {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  totalTickets Int
  soldTickets  Int      @default(0)
  price        Decimal  @db.Decimal(10, 2)
  endsIn       DateTime
  tags         String[]
  status       String   @default("draft") // "active", "completed", "draft"
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  affiliates Affiliate[]
}

model Affiliate {
  id                   String   @id @default(cuid())
  cpf                  String   @unique
  password             String
  name                 String
  raffleId             Int
  raffle               Prize    @relation(fields: [raffleId], references: [id])
  commissionPercentage Decimal  @db.Decimal(5, 2)
  ticketsSold          Int      @default(0)
  revenueGenerated     Decimal  @default(0) @db.Decimal(10, 2)
  joinDate             DateTime @default(now())
  updatedAt            DateTime @updatedAt
}
